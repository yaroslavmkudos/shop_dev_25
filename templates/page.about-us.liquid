<script>
    const Banner = document.querySelector('.creeping_line--banner')
    const BannerFirstRow = Banner.querySelector('.creeping_line__row--1')
    const BannerSecondRow = Banner.querySelector('.creeping_line__row--2')
    const BannerThirdRow = Banner.querySelector('.creeping_line__row--3')
    const Story = document.querySelector('.creeping_line__row--story')
    const Team = document.querySelector('.creeping_line__row--team')

    function isInViewport(element) {
        const rect = element.getBoundingClientRect();
        return (
            rect.top >= -90 &&
            rect.bottom <= (window.innerHeight || document.documentElement.clientHeight)
        );
    }
    
    setTimeout(() => {
        window.onscroll = () => {

            if (isInViewport(Story)) {
                let scrollValue = (Story.offsetTop - window.scrollY + 90) / 6
                Story.style.left = `-${scrollValue}px`
            }

            if (isInViewport(Team)) {
                let scrollValue = (Team.offsetTop - window.scrollY + 90) / 6
                Team.style.left = `-${scrollValue}px`
            }

            let scrollValue = (Banner.offsetTop - window.scrollY) / 6
            let scrollValue2 = (window.scrollY - Banner.offsetTop) / 6
            BannerFirstRow.style.left = `${scrollValue}px`
            BannerSecondRow.style.left = `${scrollValue2}px`
            BannerThirdRow.style.left = `${scrollValue}px`
         
         }
    }, 3000);
    
</script>
