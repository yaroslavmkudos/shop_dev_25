<div class="landing__banner page-width">
    {% if section.settings.image != blank %}
        <img src="{{section.settings.image | img_url: '200x'}}" alt="" class="landing__banner_logo">
    {% endif %}
    
    {% if section.settings.title != blank %}
        <h1 class="landing__banner_title lh1">{{section.settings.title}}</h1>
    {% endif %}
    
    {% if section.settings.text != blank %}
        <div class="landing__banner_text lbody">{{section.settings.text}}</div>
    {% endif %}
    
    {% if section.settings.link_text != blank %}
        <a href="#products" class='btn'>{{section.settings.link_text}}</a>
    {% endif %}
    
</div>

{% schema %}
    {
        "name": "Landing banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Title"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Text",
                "default": "Text"
            },
            {
                "type": "text",
                "id": "link_text",
                "label": "Link text"
            }
        ],
        "presets": [
            {
                "name":"Landing banner"
            }
        ]
    }
{% endschema %}
