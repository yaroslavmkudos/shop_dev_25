{% for block in section.blocks %}
    {% case block.type %}
        {% when 'navigation' %}
            {% render 'landing-navigation', content: block.settings %}
        {% when 'banner' %}
            {% render 'landing-banner', content: block.settings %}
        {% when 'products' %}
            {% render 'landing-products', content: block.settings %}
        {% when 'what_is_a' %}
            {% render 'landing-what-is-a', content: block.settings %}
        {% when 'what_inside' %}
            {% render 'landing-what-inside', content: block.settings %}
        {% when 'faq' %}
            {% render 'landing-faq', content: block.settings %}
        {% when 'learn_more' %}
            {% render 'landing-learn-more', content: block.settings %}
        {% when 'tutorial' %}
            {% render 'landing-tutorial', content: block.settings %}
        {% when 'bundle' %}
            {% render 'landing-bundle', content: block.settings %}
        {% when 'pfp' %}
            {% render 'landing-pfp', content: block.settings %}
            
    {% endcase %}
{% endfor %}

