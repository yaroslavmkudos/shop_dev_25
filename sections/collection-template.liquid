

<!-- -------sections/collection-template.liquid-- -->
<link
  rel="stylesheet"
  href="{{ 'swiper-bundle.min.css' | asset_url }}"
>

{% assign tagIsActive = false %}
{% assign currentTag = '' %}
{% assign badTags = 'Blue,Yellow,Orange,Red,Green,Purple,Black,White,_wf_cus' %}

{% if current_tags.size > 0 %}
  {% assign possibleTag = current_tags.first %}
  {% unless badTags contains possibleTag %}
    {% assign tagIsActive = true %}
    {% assign currentTag = possibleTag %}
  {% endunless %}
{% endif %}

{% case section.settings.grid %}
  {% when 2 %}
    {%- assign max_height = 530 -%}
  {% when 3 %}
    {%- assign max_height = 345 -%}
  {% when 4 %}
    {%- assign max_height = 250 -%}
  {% when 5 %}
    {%- assign max_height = 195 -%}
{% endcase %}

{% if cart.attributes.pagination %}
  {%- assign limit = cart.attributes.pagination -%}
{% else %}
  {%- assign limit = 18 -%}
{% endif %}

{% paginate collection.products by limit %}
  <div data-section-id="{{ section.id }}" data-section-type="collection-template">
    <div class="page-width" id="Collection">
      <div class="collection__content">
        {%- include 'collection-menu-new', section: section -%}

        <div class="collection__main">
          {% if section.settings.layout == 'grid' %}
            {% case section.settings.grid %}
              {% when 2 %}
                {%- assign grid_item_width = 'medium-up--one-half' -%}
              {% when 3 %}
                {%- assign grid_item_width = 'small--one-half medium-up--one-third' -%}
              {% when 4 %}
                {%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}
              {% when 5 %}
                {%- assign grid_item_width = 'small--one-half medium-up--one-fifth' -%}
            {% endcase %}

            {% if is_filter_by_available or section.settings.sort_enable %}
              <div class="filters-toolbar-wrapper{% if is_filter_by_available %} filters-toolbar--has-filter{% endif %}">
                <div class="collection-toolbars">
                  <div class="filters-toolbar">
                    <div class="filters-toolbar__item-wrapper">
                      {% if section.settings.sort_enable %}
                        <div class="filters-toolbar__item-child">
                          {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                          <div class="filters-toolbar__input-wrapper select-group">
                            <select
                              name="sort_by"
                              id="SortBy"
                              class="filters-toolbar__input hidden"
                              aria-describedby="a11y-refresh-page-message a11y-selection-message"
                              data-default-sortby="{{ collection.default_sort_by }}"
                              data-select-input
                            >
                              <option selected disabled>Sort</option>
                              {%- for option in collection.sort_options -%}
                                <option
                                  value="{{ option.value }}"
                                  {% if option.value == sort_by %}
                                    selected="selected"
                                  {% endif %}
                                >
                                  {{ option.name }}
                                </option>
                              {%- endfor -%}
                            </select>
                            {% include 'icon-chevron-down' %}
                          </div>
                        </div>
                      {% endif %}

                      {% if section.settings.tags_enable %}
                        {% unless collection.all_tags.size == 0 %}
                          <div class="filters-toolbar__item-child">
                            <div class="filters-toolbar__input-wrapper select-group">
                              <select
                                class="filters-toolbar__input hidden"
                                name="FilterTags"
                                id="FilterTags"
                                aria-describedby="a11y-refresh-page-message a11y-selection-message"
                                data-select-input
                              >
                                <option selected disabled>Color</option>
                                <option value="{{ collection.url }}">All colors</option>
                                {% for tag in collection.all_tags %}
                                  {%- assign new_url = tag
                                    | link_to_tag: tag
                                    | split: 'href="'
                                    | last
                                    | split: '"'
                                    | first
                                  -%}
                                  <option
                                    value="{{ new_url }}"
                                    {% if current_tags contains tag %}
                                      selected="selected"
                                    {% endif %}
                                  >
                                    {{ tag }}
                                  </option>
                                {% endfor %}
                              </select>
                              {% include 'icon-chevron-down' %}
                            </div>
                          </div>
                        {% endunless %}
                      {% endif %}

                      <!-- HTML dropdown menu -->
                      <div class="filters-custom">
                        <div class="filter filter-tags dropdown">
                          <span>{{ section.settings.dropdown }}</span>
                          <div class="dropdown-content">
                            <div class="iki">
                              <ul>
                                <li>
                                  <a class="oni" href="#"
                                    >Styles
                                    <svg
                                      xmlns="http://www.w3.org/2000/svg"
                                      width="8"
                                      height="12"
                                      viewBox="0 0 8 12"
                                      fill="none"
                                    >
                                      <path d="M0.579956 10.59L5.16996 6L0.579956 1.41L1.99996 0L7.99996 6L1.99996 12L0.579956 10.59Z" fill="#0080FF"/>
                                    </svg>
                                  </a>

                                  <ul id="styles" class="sub-menu">
                                    <div class="inner">
                                      {% for block in section.blocks %}
                                        {% assign words = block.settings.style | split: ',' %}

                                        {% for word in words %}
                                          {% if block.type == 'tag' %}
                                            <li>
                                              <a href="{{collection.url}}/{{word | replace: " ", "-"}}">{{ word }}</a>
                                            </li>
                                          {% endif %}
                                        {% endfor %}
                                      {% endfor %}
                                    </div>
                                  </ul>
                                </li>
                                <li>
                                  <a class="oni" href="#"
                                    >Games
                                    <svg
                                      xmlns="http://www.w3.org/2000/svg"
                                      width="8"
                                      height="12"
                                      viewBox="0 0 8 12"
                                      fill="none"
                                    >
                                      <path d="M0.579956 10.59L5.16996 6L0.579956 1.41L1.99996 0L7.99996 6L1.99996 12L0.579956 10.59Z" fill="#0080FF"/>
                                    </svg>
                                  </a>
                                  <ul id="games" class="sub-menu">
                                    <div class="inner">
                                      {% for block in section.blocks %}
                                        {% assign words = block.settings.style | split: ',' %}

                                        {% for word in words %}
                                          {% if block.type == 'tag2' %}
                                            <li>
                                              <a href="{{collection.url}}/{{word | replace: " ", "-"}}">{{ word }}</a>
                                            </li>
                                          {% endif %}
                                        {% endfor %}
                                      {% endfor %}
                                    </div>
                                  </ul>
                                </li>
                                <li>
                                  <a class="oni" href="#"
                                    >Colors
                                    <svg
                                      xmlns="http://www.w3.org/2000/svg"
                                      width="8"
                                      height="12"
                                      viewBox="0 0 8 12"
                                      fill="none"
                                    >
                                      <path d="M0.579956 10.59L5.16996 6L0.579956 1.41L1.99996 0L7.99996 6L1.99996 12L0.579956 10.59Z" fill="#0080FF"/>
                                    </svg>
                                  </a>
                                  <ul id="colors" class="sub-menu">
                                    <div class="inner">
                                      {% for block in section.blocks %}
                                        {% assign words = block.settings.style | split: ',' %}

                                        {% for word in words %}
                                          {% if block.type == 'tag3' %}
                                            <li>
                                              <a href="{{collection.url}}/{{word | replace: " ", "-"}}">{{ word }}</a>
                                            </li>
                                          {% endif %}
                                        {% endfor %}
                                      {% endfor %}
                                    </div>
                                  </ul>
                                </li>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="filters-custom noki">
                        <div class="filter filter-tags {% if tagIsActive %} active {% endif %}">
                          <span>
                            {%- if tagIsActive %}{{ currentTag }}{% else %}Tags{% endif %}
                          </span>
                          {% if tagIsActive -%}
                            <a href="/collections/{{ collection.handle }}" class="button_remove"></a>
                          {% endif %}
                          <div class="list_wrapper">
                            <ul>
                              {% for tag in collections.all.tags %}
                                {% unless badTags contains tag %}
                                  {% assign tagHandle = tag | handleize %}
                                  <li
                                    {% if canonical_url contains tagHandle %}
                                      class="active"
                                    {% endif %}
                                  >
                                    <a href="{{collection.url}}/{{tag}}">{{ tag }}</a>
                                  </li>
                                {% endunless %}
                              {% endfor %}
                            </ul>
                            {% if tagIsActive %}
                              <div class="clear"><a href="{{collection.url}}">Clear All Tags</a></div>
                            {% endif %}
                          </div>
                        </div>
                        <div class="filter filter-color">
                          <span>Color</span><a href="/collections/{{ collection.handle }}" class="button_remove"></a>
                          <ul></ul>
                        </div>
                      </div>
                    </div>

                    <div class="filters-custom">
                      <div class="filter filter-sort">
                        <span>Sort</span>
                        <ul></ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}

            {% if tagIsActive %}
              <h1 class="collection__title">Tagged with '{{ currentTag }}'</h1>
              <div class="collection__description">{{ collection.products | size }} Results</div>
            {% else %}
              <h1 class="collection__title">{{ collection.title }}</h1>
              <div class="collection__description">{{ collection.description }}</div>
            {% endif %}

            <ul class="grid grid--uniform{% if collection.products_count > 0 %} grid--view-items{% endif %}">
              {% for product in collection.products %}
                <li class="{% assign foundCollection = false %}{% assign collectionHandles = 'trending,opala' | split: ',' %}{% for handle in collectionHandles %}{% for collectionItem in product.collections %}{% if collectionItem.handle == handle %}{% assign foundCollection = true %}{% if handle == 'trending' %}buk{% endif %}{% break %}  <!-- Exit the inner loop after the first matching collection is found -->{% endif %}{% endfor %}{% endfor %}{% if product.tags contains 'new' %}newkara{% endif %}">
                  {% include 'product-card-grid',
                    max_height: max_height,
                    product: product,
                    show_vendor: section.settings.show_vendor
                  %}
                </li>
              {% else %}
                {% comment %}
                  Add default products to help with onboarding for collections/all only.

                  The onboarding styles and products are only loaded if the
                  store has no products.
                {% endcomment %}
                {% if collection.handle == 'all'
                  and collection.all_vendors.size == 0
                  and collection.all_types.size == 0
                %}
                  <li class="grid__item">
                    <div class="grid grid--uniform">
                      {% for i in (1..limit) %}
                        <div class="grid__item {{ grid_item_width }}">
                          <div class="grid-view-item">
                            <a href="#" class="grid-view-item__link">
                              <div class="grid-view-item__image">
                                {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                                {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                              </div>
                              <div class="h4 grid-view-item__title">{{ 'homepage.onboarding.product_title' | t }}</div>
                              <div class="grid-view-item__meta">
                                <span class="product-price__price">$19.99</span>
                              </div>
                            </a>
                          </div>
                        </div>
                      {% endfor %}
                    </div>
                  </li>
                {% else %}
                  {%- assign is_empty_collection = true -%}
                {% endif %}
              {% endfor %}
            </ul>
          {% else %}
            <ul class="list-view-items">
              {% for product in collection.products %}
                <li class="list-view-item">
                  {% include 'product-card-list', product: product, show_vendor: section.settings.show_vendor %}
                </li>
              {% else %}
                {% comment %}
                  Add default products to help with onboarding for collections/all only.

                  The onboarding styles and products are only loaded if the
                  store has no products.
                {% endcomment %}
                {% if collection.handle == 'all'
                  and collection.all_vendors.size == 0
                  and collection.all_types.size == 0
                %}
                  {% for i in (1..4) %}
                    <li class="list-view-item">
                      <a href="#" class="list-view-item__link">
                        <div class="list-view-item__image-column">
                          <div class="list-view-item__image-wrapper">
                            <div class="list-view-item__image">
                              {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}
                              {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                          </div>
                        </div>

                        <div class="list-view-item__title-column">
                          <div class="list-view-item__title">{{ 'homepage.onboarding.product_title' | t }}</div>
                        </div>

                        <div class="list-view-item__price-column">
                          <span class="product-price__price">$19.99</span>
                        </div>
                      </a>
                    </li>
                  {% endfor %}
                {% else %}
                  {%- assign is_empty_collection = true -%}
                {% endif %}
              {% endfor %}
            </ul>
          {% endif %}

          {% if is_empty_collection %}
            <div class="collection__empty">
              <div class="text">{{ 'collections.general.no_matches' | t }}</div>
              <a href="/collections/{{ collection.handle }}" class="button button_3">Clear Filter</a>
            </div>
          {% endif %}
          {%- if paginate.pages > 1 -%}
            {% include 'pagination', paginate: paginate %}
            {%- comment -%}
              {% render 'pagination-load-more' %}
            {%- endcomment -%}
          {%- endif -%}
          {%- comment -%}
            {% unless is_empty_collection %}
              <div class="collection__limited-view" >
                <div class="limited-view">
                  <label >
                    <div class="label-tab" >
                      <span name="paginateBy" class="label-text">
                      {% if cart.attributes.pagination != blank and cart.attributes.pagination %}
                          {{ cart.attributes.pagination }}
                      {% else %}
                          18
                      {% endif %}
                      </span>

                      {% render 'icon-arrow' %}
                    </div>
                    Per page
                  </label>


                  <ul class="dropdown-menu">
                    <li {% if cart.attributes.pagination == '18'%}class="active"{% endif %}>
                      <span data-value="18">
                        18
                      </span>
                    </li>
                    <li {% if cart.attributes.pagination == '36'%}class="active"{% endif %}>
                      <span data-value="36">
                        36
                      </span>
                    </li>
                    <li {% if cart.attributes.pagination == '48'%}class="active"{% endif %}>
                      <span data-value="48">
                        48
                      </span>
                    </li>
                  </ul>
                </div>
              </div>
            {% endunless %}
          {%- endcomment -%}
        </div>
      </div>
    </div>

    <div class="collection__bottom_bar filters-custom filters-toolbar-wrapper">
      <div class="collection-toolbars">
        <div class="filter filter-categories">
          <span>Categories</span>
        </div>
        <div class="filters-toolbar">
          {% if section.settings.sort_enable %}
            <div class="filters-toolbar__item-child">
              {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
              <div class="filters-toolbar__input-wrapper select-group">
                <select
                  name="sort_by"
                  id="SortBy"
                  class="filters-toolbar__input hidden"
                  aria-describedby="a11y-refresh-page-message a11y-selection-message"
                  data-default-sortby="{{ collection.default_sort_by }}"
                  data-select-input
                >
                  <option selected disabled>Sort</option>
                  {%- for option in collection.sort_options -%}
                    <option
                      value="{{ option.value }}"
                      {% if option.value == sort_by %}
                        selected="selected"
                      {% endif %}
                    >
                      {{ option.name }}
                    </option>
                  {%- endfor -%}
                </select>
                {% include 'icon-chevron-down' %}
              </div>
            </div>
          {% endif %}

          {% if section.settings.tags_enable %}
            {% unless collection.all_tags.size == 0 %}
              <div class="filters-toolbar__item-child">
                <div class="filters-toolbar__input-wrapper select-group">
                  <select
                    class="filters-toolbar__input hidden"
                    name="FilterTags"
                    id="FilterTags"
                    aria-describedby="a11y-refresh-page-message a11y-selection-message"
                    data-select-input
                  >
                    <option selected disabled>Color</option>
                    <option value="{{ collection.url }}">All colors</option>
                    {% for tag in collection.all_tags %}
                      {%- assign new_url = tag | link_to_tag: tag | split: 'href="' | last | split: '"' | first -%}
                      <option
                        value="{{ new_url }}"
                        {% if current_tags contains tag %}
                          selected="selected"
                        {% endif %}
                      >
                        {{ tag }}
                      </option>
                    {% endfor %}
                  </select>
                  {% include 'icon-chevron-down' %}
                </div>
              </div>
            {% endunless %}
          {% endif %}

          <div class="filters-custom">
            <div class="filter filter-sort">
              <span>Sort</span>
              <ul></ul>
            </div>
            <div class="filter filter-color">
              <span>Color</span><a href="/collections/{{ collection.handle }}" class="button_remove"></a>
              <ul></ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endpaginate %}

{% if collection.metafields.custom.what_is_section.value %}
  <div class="collection__infoblock collection__infoblock--1">
    <div class="page-width">
      {% if collection.metafields.custom.what_is_section.value.main_title %}
        <h2 class="infoblock__main_title desktop--hide">
          {{ collection.metafields.custom.what_is_section.value.main_title }}
        </h2>
      {% endif %}

      {% for item in collection.metafields.custom.what_is_section.value.items %}
        <div class="infoblock__item">
          <div class="img_wr">
            <img src="{{ item.image }}" alt="" loading="lazy">
          </div>

          <div class="infoblock__content">
            {% if forloop.index == 1 and collection.metafields.custom.what_is_section.value.main_title %}
              <h2 class="infoblock__main_title touch--hide">
                {{ collection.metafields.custom.what_is_section.value.main_title }}
              </h2>
            {% endif %}
            {% if item.big_title %}
              <h2 class="infoblock__big_title">{{ item.big_title }}</h2>
            {% endif %}
            {% if item.title %}
              <h3 class="infoblock__title">{{ item.title }}</h3>
            {% endif %}
            <div class="infoblock__text">{{ item.text }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

